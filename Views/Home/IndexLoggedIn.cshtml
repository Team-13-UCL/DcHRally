    Layout = "_Layout";
}

<div class="container text-center">
    <div class="row">
        <div class="col-md-6 left-panel">
            <h2>Mine baner</h2>
            <ul id="course-list" class="course-list">
                <!-- Iterate over user-specific courses here -->
                <li>Min f√∏rste bane</li>
                <li>Min anden bane</li>
                <li>Min tredje bane</li>
            </ul>
        </div>
        <div class="col-md-6 right-panel">
            <div class="image-container">
                <img src="~/images/TrackBuilderExample.png" alt="Byg din egen bane" class="zoom-image" />
