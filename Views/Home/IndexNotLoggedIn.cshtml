@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<div class="container text-center">
    <div class="row">
        <div class="col-md-6 left-panel">
            <div class="image-container">
                <img src="~/images/RallyAction.png" alt="Se Baneoversigten" class="zoom-image"/>
                <div class="button-container">
                    <button class="btn btn-primary" onclick="navigateToPage('@Url.Action("Index", "Home")', '@User.Identity.IsAuthenticated')">Se Baneoversigten</button>
                </div>
            </div>
        </div>
        <div class="col-md-6 right-panel">
            <div class="image-container">
                <img src="~/images/TrackBuilderExample.png" alt="Byg din egen bane" class="zoom-image"/>
                <div class="button-container">
                    <button class="btn btn-primary" onclick="navigateToPage('@Url.Action("Index", "Track")', '@User.Identity.IsAuthenticated')">Byg din egen bane</button>
                </div>
            </div>
        </div>
    </div>
</div>
